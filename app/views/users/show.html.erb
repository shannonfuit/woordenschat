<p id="notice"><%= notice %></p>


<!-- hier komt een div met de gegevens van de user -->
<h2>Gegevens</h2>
<p>
  <strong>Naam:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Klas:</strong>
  <%= @user.klas %>
</p>
<p>
  <strong>XP:</strong>
  <%= @user.xp %>
</p>

<p>
  <strong>Avatar:</strong>
</p>
<%= image_tag(@user.picture_url, :width => 300) if @user.picture.present? %>
 </p>

<%= render 'form' %>


<!-- hier komt een div met de levels -->
 <h2>Welk level wil je spelen</h2>
<table>
	<tr>
		<th>level</th>
	</tr>
	<% @levels.each do |level| %>
	<tr>
		<td> level <%=level.number %></td>
	<td>
	<%= link_to ' Speel dit level', :controller => "levels", :action => "play", :id=>level.id %></td>
	</tr>
<% end %>
</table>

<!-- hier komt een div met de highscores van de users -->
 <h2>highscores</h2>
	<table>
	<tr>
		<th>speler</th>
		<th>aantal punten</th>
	</tr>
	<% @gebruikers.each do |gebruiker| %>
	<tr>
		<td><%=gebruiker.name %></td>
		<td><%=gebruiker.xp %></td>
	</tr>
<% end %>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
