

<!-- hier komt een div met de gegevens van de user -->
<h2>Gegevens</h2>
<p>
  <strong>Naam:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Klas:</strong>
  <%= @user.klas %>
</p>
<p>
  <strong>XP:</strong>
  <%= @user.xp %>
</p>

<p>
  <strong>Avatar:</strong>
</p>
<% if @user.picture.present? %>
	<%= image_tag(@user.picture_url, :width => 150) %>
<% else %>
	<%= image_tag("default.png", :width => 150) %>
<% end %>
 </p>

<%= render 'form' %>

<!-- hier komt een div met de levels -->
 <h2>Welk level wil je spelen</h2>
<table>
	<tr>
		<th>level</th>
		<th>speel</th>
		<th>sterren</th>

	</tr>
	<% @lvlscores.each do |level, stars| %>
	<tr>
		<td> level <%=level.number %></td>
	<td>
	<%= link_to ' Speel dit level', :controller => "playedlevels", :action => "startlevel", :id=>level.id %></td>
	<td><%= image_tag("" + stars.to_s + ".jpg", :width => 60) %></td>

	</tr>
<% end %>
</table>

<!-- hier komt een div met de highscores van de users -->
 <h2>highscores</h2>
	<table>
	<tr>
		<th>speler</th>
		<th>aantal punten</th>
	</tr>
	<% @gebruikers.each do |gebruiker| %>
	<tr>
		<td><%=gebruiker.name %></td>
		<td><%=gebruiker.xp %></td>
	</tr>
<% end %>
</table>

