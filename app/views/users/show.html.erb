
<div class="container">
  <div class="main">
    <div class="row">

      <div class="col-md-1"></div>

      <div class="col col-md-4">
        <div class="panel panel-info">
          <div class="panel-heading">
           <h4> <i class="fa fa-smile-o"></i>&nbsp;<%= @user.name %></h4>
          </div>
          <div class="panel-body">
            <div class="float-left">
              <table class="fullwidth">
                <tr>
                  <td>
                      <p>
                        Jouw behaalde XP:
                        <strong><%= @user.xp %></strong>
                         <% if @user.picture? %>
                          <p>test</P>
                           <% end %>
                 
                      <%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="field">
    <%= f.file_field :picture %>
  </div>

  <div class="actions">
    <%= f.submit "Verander Avatar" %>
  </div>
<% end %>


                  </td>
                </tr>                    
              </table>
            </div>  
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h4><i class="fa fa-sitemap">&nbsp;</i>Levels</h4>
          </div>
          <div class="panel-body top">    
            <table class="fullwidth">
            <% @lvlscores.each do |level, stars| %>
              <tr>
                <td><%= link_to 'Level ' + level.number.to_s, :controller => "playedlevels", :action => "startlevel", :id=>level.id %></td>
                <td> <%= level.openingdate.strftime("%d-%m-%Y")  %> t/m <%= level.closingdate.strftime("%d-%m-%Y") %></td>
                <td><%= image_tag("" + stars.to_s + ".jpg", :width => 60) %></td>
              </tr>
            <% end %>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-1"></div>
    </div>
      <div class="row col-wrap">

        <div class="col-md-1"></div>

        <div class="col-md-4">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h4><i class="fa fa-sort-amount-desc">&nbsp;</i>Highscores</h4>
            </div>
            <div class="panel-body">
              <table class="fullwidth">
              <% @gebruikers.each do |gebruiker| %>
                <tr>
                    <td><%=gebruiker.name %></td>
                    <td class="align-right"><%=gebruiker.xp %></td>
                </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="panel panel-info">
            <div class="panel-heading border-warning">
              <h4><i class="fa fa-trophy">&nbsp;</i>TrofeeÃ«n</h4>
            </div>
            <div class="panel-body">
              <table class="fullwidth">
              <% @achievements.each do |achievement| %>
                <tr>
                  <td><%=achievement.medal.name%></td>
                  <td><%=achievement.medal.description%></td>
                  <td><%=achievement.medal.xp%></td>
                </tr>
              <% end %>
              </table>
            </div>
          </div>
        </div>
      
        <div class="col-md-1"></div>
      </div>
    </div>
  </div>
</div>



















