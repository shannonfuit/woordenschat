
<div class="container">
	<div class="main">
		<div class="row">
			<div class="col-md-6">
				<div class="panel panel-info">
              		<div class="panel-heading">
                		<h3 class="panel-title"><i class="fa fa-smile-o"></i>&nbsp;<%= @user.name %></h3>
              		</div>
              		<div class="panel-body">
               			<div class="float-left">
		                    <table class="fullwidth">
		                      <tr>
		                        <td>
		                           <p>
		                              <strong>Klas:</strong>
		                              <%= @user.klas %>
		                            </p>
		                            <p>
		                              <strong>XP:</strong>
		                              <%= @user.xp %>
		                            </p><% if @user.picture.present? %>
		                              <%= image_tag(@user.picture_url, :height => 200, :class => "img-rounded displayed") %>
		                            <% else %>
		                              <%= image_tag("default.png", :width => 200, :class => "img-rounded displayed") %>
		                            <% end %>
		                            <%= render 'form' %>             
		                        </td>
		                      </tr>		                 
		                    </table>
						</div>	
               		</div>
              	</div>
	        </div>
			<div class="col-md-6">
				<div class="panel panel-info">
                	<div class="panel-heading">
                  		<h3 class="panel-title"><i class="fa fa-sitemap"></i>Levels</h3>
                	</div>
                	<div class="panel-body">    
	                    <table class="fullwidth">
	                    <% @lvlscores.each do |level, stars| %>
	                      <tr>
	                        <td><%= link_to 'Level ' + level.number.to_s, :controller => "playedlevels", :action => "startlevel", :id=>level.id %></td>
	                        <td> <%= level.openingdate.strftime("%d-%m-%Y")  %> t/m <%= level.closingdate.strftime("%d-%m-%d-%Y") %>.</td>
	                        <td><%= image_tag("" + stars.to_s + ".jpg", :width => 60) %></td>
	                      </tr>
	                    <% end %>
	                    </table>
                  	</div>
				</div>
            </div>
		</div>
        <div class="row">
          	<div class="col-md-6">
				<div class="panel panel-info">
                	<div class="panel-heading">
                  		<h3 class="panel-title"><i class="fa fa-sort-amount-desc"></i>Highscores</h3>
                	</div>
                	<div class="panel-body">
	                  	<table class="fullwidth">
	                  	<% @gebruikers.each do |gebruiker| %>
	                    	<tr>
	                      		<td><%=gebruiker.name %></td>
	                      		<td class="align-right"><%=gebruiker.xp %></td>
	                    	</tr>
	                  		<% end %>
	                  	</table>
					</div>
              	</div>
          	</div>
          	<div class="col-md-6">
				<div class="panel panel-info">
                	<div class="panel-heading border-warning">
                  		<h3 class="panel-title"><i class="fa fa-trophy"></i>TrofeeÃ«n</h3>
                	</div>
                	<div class="panel-body">
	                    <table class="fullwidth">
	                    <% @achievements.each do |achievement| %>
	                      <tr>
	                        <td><%=achievement.medal.name%></td>
	                        <td><%=achievement.medal.description%></td>
	                        <td><%=achievement.medal.xp%></td>
	                      </tr>
	                    <% end %>
	                    </table>
                  	</div>
			    </div>
            </div>
     	</div>
	</div>
</div>
		  </div>