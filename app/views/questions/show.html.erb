<div class = "container">
<div class = "not-opaque">
    <p id="notice"><%= notice %></p>

  <p>
    <strong>Word:</strong>
    <%= @question.word %>
  </p>

  <p>
    <strong>Ans1:</strong>
    <%= @question.ans1 %>
  </p>

  <p>
    <strong>Ans2:</strong>
    <%= @question.ans2 %>
  </p>

  <p>
    <strong>Ans3:</strong>
    <%= @question.ans3 %>
  </p>

  <p>
    <strong>Ans4:</strong>
    <%= @question.ans4 %>
  </p>

  <p>
    <strong>Hintsemantic:</strong>
    <%= @question.hintsemantic %>
  </p>

  <p>
    <strong>Hintsentence:</strong>
    <%= @question.hintsentence %>
  </p>

  <p>
    <strong>Hintimage:</strong>
    <% if question.hintimage.present? %>
      <%= image_tag(question.hintimage, :width => 50) %>
    <% end %>
  </p>

  <p>
    <strong>Anscorrect:</strong>
    <%= @question.anscorrect %>
  </p>

  <p>
    <strong>Level:</strong>
    <%= @question.level.number %>
  </p>

  <%= link_to 'Bewerken', edit_question_path(@question) %> |
  <%= link_to 'Terug', questions_path %>
</div>
</div>