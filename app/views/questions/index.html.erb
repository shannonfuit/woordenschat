<div class = "not-opaque">

<h1>Overzicht van de vragen</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Ans1</th>
      <th>Ans2</th>
      <th>Ans3</th>
      <th>Ans4</th>
      <th>Hintsemantic</th>
      <th>Hintsentence</th>
      <th>Hintimage</th>
      <th>Anscorrect</th>
      <th>Level.number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.word %></td>
        <td><%= question.ans1 %></td>
        <td><%= question.ans2 %></td>
        <td><%= question.ans3 %></td>
        <td><%= question.ans4 %></td>
        <td><%= question.hintsemantic %></td>
        <td><%= question.hintsentence %></td>
        <td><% if question.hintimage.present? %>
                <%= image_tag(question.hintimage, :width => 50) %>
            <% end %></td>
        <td><%= question.anscorrect %></td>
        <td><%= question.level.number %></td>
        <td><%= link_to 'Toon', question %></td>
        <td><%= link_to 'Bewerken', edit_question_path(question) %></td>
        <td><%= link_to 'Verwijder', question, method: :delete, data: { confirm: 'Weet je het zeker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nieuwe vraag', new_question_path %>
</div>