<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Ans1</th>
      <th>Ans2</th>
      <th>Ans3</th>
      <th>Ans4</th>
      <th>Hintsemantic</th>
      <th>Hintsentence</th>
      <th>Hintimage</th>
      <th>Anscorrect</th>
      <th>Level.number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.word %></td>
        <td><%= question.ans1 %></td>
        <td><%= question.ans2 %></td>
        <td><%= question.ans3 %></td>
        <td><%= question.ans4 %></td>
        <td><%= question.hintsemantic %></td>
        <td><%= question.hintsentence %></td>
        <td><%= question.hintimage %></td>
        <td><%= question.anscorrect %></td>
        <td><%= question.level %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

