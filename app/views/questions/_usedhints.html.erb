
<div class="text-center">
	<div class="btn-group">
  <button type="button" class="btn btn-default"><%= link_to_unless @answer.hintsentenceused == true || @answer.hintimageused == true, 'synoniem', :controller => "questions", :action => "usedhints", id: @question.id, answerid: @answer.id, hintid: "hintsemanticused" %>
  </button>
  <button type="button" class="btn btn-default"><%= link_to_unless @answer.hintsemanticused == true || @answer.hintimageused == true, 'zin', :controller => "questions", :action => "usedhints", id: @question.id, answerid: @answer.id, hintid: "hintsentenceused" %>
  </button>
  <button type="button" class="btn btn-default"><%= link_to_unless @answer.hintsentenceused == true || @answer.hintsemanticused == true, 'afbeelding', :controller => "questions", :action => "usedhints", id: @question.id, answerid: @answer.id, hintid: "hintimageused" %>
  </button>
</div>
</div>

<% if @answer.hintsemanticused == true %>
	<div class="alert alert-info"><%= @question.hintsemantic %></div>
<% elsif @answer.hintsentenceused == true %>
	<div class="alert alert-info"><%= @question.hintsentence %></div>
<% elsif @answer.hintimageused  == true%>
	<% if @question.hintimage.present? %>
        <div class="alert alert-info"><%= image_tag(@question.hintimage, :width => 250, :class => "img-rounded displayed") %></div>
    <%end%>
<% end %>
